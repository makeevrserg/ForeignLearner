<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/button_foreign_to_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:drawableStart="@drawable/ic_foreign_to_word"
            android:padding="5sp"
            android:text="\t\tНахождение перевода"
            android:textAlignment="textStart"
            android:textColor="?attr/textColor" />

        <Button
            android:id="@+id/button_word_to_foreign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:drawableStart="@drawable/ic_word_to_foreign"
            android:padding="5sp"
            android:text="\t\tНахождение слова"
            android:textAlignment="textStart"
            android:textColor="?attr/textColor" />

        <Button
            android:id="@+id/button_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:drawableStart="@drawable/ic_match"
            android:padding="5sp"
            android:text="\t\tНахождение слова"
            android:textAlignment="textStart"
            android:textColor="?attr/textColor" />
        <Button
            android:layout_marginTop="10sp"
            android:id="@+id/button_wordCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:drawableStart="@drawable/ic_text"
            android:padding="5sp"
            android:text="\t\tКоличество выбранных слов:"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:textColor="?attr/textColor" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>